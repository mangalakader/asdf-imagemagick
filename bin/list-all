#!/usr/bin/env bash

releases_path=https://api.github.com/repos/ImageMagick/ImageMagick/tags
cmd="curl -s $releases_path"

# Fetch all tag names, and get only second column. Then remove all unnecesary characters.
if [ "$(uname)" == "Linux" ]; then
    versions=$(eval $cmd | grep -oE "name\": \".{1,15}\"," | sed 's/name\": \"//;s/\",//' | tac)
elif [ "$(uname)" == "Darwin" ]; then
    versions=$(eval $cmd | grep -oE "name\": \".{1,15}\"," | sed 's/name\": \"//;s/\",//' | sort -r $'\n')
fi
echo $versions